map{
  width: 100%;
  height: 955rpx;
}

.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.button-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
  gap: 20rpx;
}

.main-buttons {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.custom-btn {
  flex: 1;
  height: 80rpx !important;
  line-height: 80rpx !important;
  margin: 0 !important;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.menu-btn {
  width: 80rpx;
  height: 80rpx;
  background: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.menu-icon {
  width: 24rpx;
  height: 3rpx;
  background: white;
  position: relative;
  display: block;
  margin: 0 auto;
}

.menu-icon::before,
.menu-icon::after {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 3rpx;
  background: white;
  left: 0;
  transition: all 0.3s ease;
}

.menu-icon::before {
  top: -8rpx;
}

.menu-icon::after {
  bottom: -8rpx;
}

.menu-icon.open {
  background: transparent !important;
}

.menu-icon.open::before {
  transform: rotate(45deg) translate(6rpx, 6rpx);
  top: 0;
}

.menu-icon.open::after {
  transform: rotate(-45deg) translate(6rpx, -6rpx);
  bottom: 0;
}

.search-btn {
  background: #1aad19 !important;
}

.nav-btn {
  background: #2b80ff !important;
}

.map-container {
  width: 100%;
  height: 600rpx;
  margin: 20rpx 0;
}

.map-container map {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.location-info {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx;
}

.info-item {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #666;
  width: 120rpx;
  font-weight: bold;
}

.value {
  color: #333;
  flex: 1;
}

.side-menu {
  position: fixed;
  top: 0;
  right: -70%;
  width: 70%;
  height: 100vh;
  background: white;
  box-shadow: -4rpx 0 10rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  z-index: 999;
}

.side-menu.open {
  right: 0;
}

.menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,0.3);
  z-index: 998;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.menu-mask.show {
  opacity: 1;
  visibility: visible;
}

.menu-list {
  padding: 30rpx;
}

.menu-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}